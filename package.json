{
  "name": "rex-state",
  "version": "2.0.0-alpha-1",
  "description": "Convert hooks into shared states between React components",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "rex-state.podspec",
    "!lib/typescript/example",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "yarn example && yarn pods && bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react",
    "state-management",
    "state",
    "rex",
    "redux",
    "rex-state",
    "userex-hook",
    "react-hooks"
  ],
  "repository": "https://github.com/react-native-toolkit/rex-state",
  "author": "DaniAkash <s.daniakash@gmail.com> (https://github.com/DaniAkash)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/react-native-toolkit/rex-state/issues"
  },
  "homepage": "https://rex-state.netlify.app",
  "devDependencies": {
    "@commitlint/config-conventional": "12.0.1",
    "@react-native-community/bob": "0.17.1",
    "@react-native-community/eslint-config": "2.0.0",
    "@release-it/conventional-changelog": "2.0.1",
    "@testing-library/react": "11.2.5",
    "@types/jest": "26.0.20",
    "@types/react": "17.0.2",
    "@types/react-native": "0.63.50",
    "commitlint": "12.0.1",
    "eslint": "7.21.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "5.1.2",
    "jest": "26.6.3",
    "pod-install": "0.1.18",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-native": "0.63.4",
    "release-it": "14.4.1",
    "typescript": "4.2.2",
    "use-context-selector": "1.3.7"
  },
  "peerDependencies": {
    "react": "17.0.1",
    "react-native": "0.63.4"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
